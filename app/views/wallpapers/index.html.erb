<%- model_class = Wallpaper -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-stripped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:delete_wallpaper) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @wallpapers.each do |wallpaper| %>
      <tr>
        <td><%= link_to wallpaper.name, wallpaper_path(wallpaper) %></td>
        <td><%= wallpaper.delete_wallpaper %></td>
        <td><%=l wallpaper.created_at %></td>
        <td class="btn-group">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_wallpaper_path(wallpaper), :class => 'btn btn-mini' %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      wallpaper_path(wallpaper), :class => 'btn btn-mini btn-info' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      wallpaper_path(wallpaper),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_wallpaper_path,
            :class => 'btn btn-primary' %>
